#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
fi

# If running the SMTP server with a domain configured, setup TLS certs
if [ "${1}" == "./bin/smtp_server" ] && [ -n "$SMTP_DOMAIN" ]; then
  source ./bin/setup_smtp_certs
fi

exec "${@}"
